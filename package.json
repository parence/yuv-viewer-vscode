{
  "name": "yuv-viewer",
  "displayName": "Yuv Viewer",
  "description": "View YUVs in VSCode",
  "publisher": "nyan",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/parence/yuv-viewer-vscode.git"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:yuv-viewer.view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "yuv-viewer.view",
        "displayName": "yuv",
        "selector": [
          {
            "filenamePattern": "*.yuv"
          }
        ],
        "priority": "default"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "yuvViewer",
          "name": "Yuv Viewer"
        }
      ]
    },
    "commands": [
      {
        "command": "yuv-viewer.refresh",
        "title": "Refresh"
      },
      {
        "command": "yuv-viewer.setSubsampling",
        "title": "Yuv-Viewer: Set chroma subsampling"
      },
      {
        "command": "yuv-viewer.setWidth",
        "title": "Yuv-Viewer: Set width"
      },
      {
        "command": "yuv-viewer.setHeight",
        "title": "Yuv-Viewer: Set height"
      },
      {
        "command": "yuv-viewer.setBitdepth",
        "title": "Yuv-Viewer: Set bitdepth"
      },
      {
        "command": "yuv-viewer.deleteCache",
        "title": "Yuv-Viewer: Delete cache"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "17.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "svelte-check": "^2.7.0",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.10.4",
    "ts-loader": "^9.2.8",
    "tsconfig-paths": "^4.0.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.2",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "svelte": "^3.48.0",
    "yuvjs": "^1.0.3"
  }
}
