{
  "name": "yuv-viewer",
  "displayName": "yuv-viewer",
  "description": "View YUVs in VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:yuv-viewer.view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "yuv-viewer.view",
        "displayName": "yuv",
        "selector": [
          {
            "filenamePattern": "*.yuv"
          }
        ],
        "priority": "default"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "yuvViewer",
          "name": "Yuv Viewer"
        }
      ]
    },
    "commands": [
      {
        "command": "yuv-viewer.setFormat",
        "title": "Yuv-Viewer: Set format"
      },
      {
        "command": "yuv-viewer.deleteCache",
        "title": "Yuv-Viewer: Delete cache"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "svelte-check": "^2.3.0",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.10.2",
    "ts-loader": "^9.2.6",
    "tsconfig-paths": "^3.12.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.5",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "svelte": "^3.46.3"
  }
}
